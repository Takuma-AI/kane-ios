#!/bin/bash

# YouTube Transcribe Easy - YTE
# Quick wrapper for the YouTube transcription tool

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Path to the actual transcription script
TRANSCRIBE_SCRIPT="$SCRIPT_DIR/tools/youtube-transcribe/transcribe.py"

# Check if the transcribe script exists
if [ ! -f "$TRANSCRIBE_SCRIPT" ]; then
    echo "Error: Transcribe script not found at $TRANSCRIBE_SCRIPT"
    exit 1
fi

# Pass all arguments to the Python script
python3 "$TRANSCRIBE_SCRIPT" "$@"